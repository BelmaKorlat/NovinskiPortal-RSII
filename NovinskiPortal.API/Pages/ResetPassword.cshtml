@page "/reset-password"
@model NovinskiPortal.API.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset lozinke";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="bs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
          rel="stylesheet" />

    <style>
        body {
            background-color: #FFF5EC;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .reset-card {
            max-width: 420px;
            width: 100%;
            border-radius: 18px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            border: none;
        }

        .btn-primary {
            background-color: #A65A35;
            border-color: #A65A35;
            border-radius: 999px; 
            font-weight: 500;
        }

        .btn-primary:hover {
                background-color: #8E4C2D;
                border-color: #8E4C2D;
        }

        .form-control {
            border-radius: 12px;
            border-color: #E2E2E2;
        }

        .input-group .form-control {
            border-radius: 12px;
        }

        .input-group .input-group-text {
            border-radius: 12px 0 0 12px;
            border-color: #E2E2E2;
        }

        .input-group .form-control.border-start-0 {
            border-radius: 0 12px 12px 0;
        }

        .input-group-text[data-toggle="password"] {
            cursor: pointer;
        }

        h3 {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card reset-card p-4">
            <h3 class="mb-3 text-center">Reset lozinke</h3>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mb-0 text-center">
                    @Model.Message
                </div>
            }
            else
            {
                <form method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <input asp-for="Input.Token" type="hidden" />


                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label">Nova lozinka</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Input.NewPassword"
                                   class="form-control border-start-0"
                                   placeholder="Unesite novu lozinku" />
                            <span class="input-group-text bg-white border-start-0"
                                  data-toggle="password"
                                  data-target="Input_NewPassword">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Potvrda nove lozinke</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="Input.ConfirmPassword"
                                   class="form-control border-start-0"
                                   placeholder="Ponovo unesite novu lozinku" />
                            <span class="input-group-text bg-white border-start-0"
                                  data-toggle="password"
                                  data-target="Input_ConfirmPassword">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100" id="ResetSubmit">
                        Promijeni lozinku
                    </button>

                    <p class="text-muted mt-3 mb-0 small text-center">
                        Ako niste tražili reset lozinke, možete ignorisati ovu stranicu.
                    </p>
                </form>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"
            crossorigin="anonymous"></script>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggles = document.querySelectorAll('[data-toggle="password"]');

            toggles.forEach(function (toggle) {
                toggle.addEventListener('click', function () {
                    const targetId = this.getAttribute('data-target');
                    const input = document.getElementById(targetId);
                    if (!input) return;

                    const currentType = input.getAttribute('type');
                    const newType = currentType === 'password' ? 'text' : 'password';
                    input.setAttribute('type', newType);

                    const icon = this.querySelector('i');
                    if (!icon) return;

                    icon.classList.toggle('bi-eye');
                    icon.classList.toggle('bi-eye-slash');
                });
            }); 
            const newPwd = document.getElementById('Input_NewPassword');
            const confirmPwd = document.getElementById('Input_ConfirmPassword');

            if (newPwd && confirmPwd && window.jQuery) {
                const $newPwd = $(newPwd);
                const $confirmPwd = $(confirmPwd);

                $newPwd.on('input', function () {
                    $newPwd.valid();
                    $confirmPwd.valid();
                });

                $confirmPwd.on('input', function () {
                    $confirmPwd.valid();
                });
            }
        });
    </script>
</body>
</html>
